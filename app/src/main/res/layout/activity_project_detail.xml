<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:padding="24dp">

    <TextView
        android:id="@+id/tv_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selected_job"
        android:textColor="@color/text_primary"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_title"
        app:layout_constraintBottom_toTopOf="@+id/btn_delete">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_title"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/tv_project_title_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/settings_item_background"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_primary"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:text="Project Title" />

            <View
                android:id="@+id/status_indicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/status_dot_background" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_client"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tv_project_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/settings_item_background"
                android:layout_marginTop="4dp"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:textColor="@color/gray"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/ic_clients"
                app:drawableTint="@color/gray"
                tools:text="Client: -" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_dates"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tv_project_dates_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/settings_item_background"
                android:layout_marginTop="4dp"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:textColor="@color/gray"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/ic_calendar"
                app:drawableTint="@color/gray"
                tools:text="Dates: -" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_description"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tv_project_desc_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/settings_item_background"
                android:layout_marginTop="4dp"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                tools:text="Description..." />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_edit"
        android:contentDescription="@string/edit"
        app:backgroundTint="@color/petrol_green"
        app:tint="@color/white"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_delete" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_delete"
        android:contentDescription="@string/delete"
        app:backgroundTint="@color/petrol_green"
        app:tint="@color/white"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>