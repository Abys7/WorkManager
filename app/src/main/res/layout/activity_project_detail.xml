<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:padding="24dp">

    <TextView
        android:id="@+id/tv_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected job"
        android:textColor="@color/text_primary"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Status Indicator Dot -->
    <View
        android:id="@+id/status_indicator"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/status_dot_background"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/tv_detail_title"
        app:layout_constraintTop_toTopOf="@id/tv_detail_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_detail_title"/>

    <!-- Project Image Placeholder (Large) -->
    <View
        android:id="@+id/project_image_large"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/settings_item_background"
        android:backgroundTint="@color/petrol_green_light"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toTopOf="@id/btn_delete"
        app:layout_constraintTop_toBottomOf="@id/project_image_large">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/settings_item_background"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_project_title_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>

            <TextView
                android:id="@+id/tv_project_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Client: -"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tv_project_dates_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dates: -"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginTop="4dp"/>
            
             <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginVertical="12dp"/>

            <TextView
                android:id="@+id/tv_project_desc_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description..."
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_edit"
        app:backgroundTint="@color/petrol_green"
        app:tint="@color/white"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_delete" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_delete"
        app:backgroundTint="@color/petrol_green"
        app:tint="@color/white"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>